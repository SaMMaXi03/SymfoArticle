{% extends 'base.html.twig' %}


{% block main %}

    <section>
        <a href="{{ path('admin_insert_article') }}">Create a Burger</a>
    </section>

    <section class="articles2">

        {% for article in articles %}

            {% if article.isPublished %}
                <article class="article">
                    <h1>{{ article.title }}</h1>
                    {% if article.category %}
                        <p>{{ article.category.title }}</p>
                    {% else %}
                        <p>Not fast-Food</p>
                    {% endif %}
                    <br>
                    <a href="{{ path('admin_article', {'id': article.id }) }}">See this Burger</a>
                            <br>
                            <br>
                        <a href="{{ path('admin_update_article', {'id': article.id }) }}">Change the recipe</a>
                            <br>
                            <br>
                        <a href="{{ path('admin_delete_article', {'id': article.id }) }}">Delete this Burger</a>
                </article>
            {% endif %}

        {% endfor %}
    </section>

{% endblock %}